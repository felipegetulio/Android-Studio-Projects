            android:layout_marginStart="16dp"
            android:paddingEnd="@dimen/checkbox_paddingEnd"
            android:paddingStart="@dimen/checkbox_paddingStart"
            android:text="@string/text_e10"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/option_f_question_10_cb"
            style="@style/TextChoiceTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingEnd="@dimen/checkbox_paddingEnd"
            android:paddingStart="@dimen/checkbox_paddingStart"
            android:text="@string/text_f10"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/option_g_question_10_cb"
            style="@style/TextChoiceTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingEnd="@dimen/checkbox_paddingEnd"
