        </RadioGroup>

        <View style="@style/SeparatorStyle" />

        <TextView
            style="@style/TitleQuestionTheme"
            android:text="@string/question_statement_9" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/option_a_question_9_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_a9" />

            <RadioButton
                android:id="@+id/option_b_question_9_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_b9" />

            <RadioButton
                android:id="@+id/option_c_question_9_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_c9" />

            <RadioButton
                android:id="@+id/option_d_question_9_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_d9" />

        </RadioGroup>

        <View style="@style/SeparatorStyle" />

        <TextView
            style="@style/TitleQuestionTheme"
            android:text="@string/question_statement_10" />

        <CheckBox
            android:id="@+id/option_a_question_10_cb"
            style="@style/TextChoiceTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingEnd="@dimen/checkbox_paddingEnd"
            android:paddingStart="@dimen/checkbox_paddingStart"
            android:text="@string/text_a10"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/option_b_question_10_cb"
            style="@style/TextChoiceTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingEnd="@dimen/checkbox_paddingEnd"
            android:paddingStart="@dimen/checkbox_paddingStart"
            android:text="@string/text_b10"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/option_c_question_10_cb"
            style="@style/TextChoiceTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingEnd="@dimen/checkbox_paddingEnd"
            android:paddingStart="@dimen/checkbox_paddingStart"
