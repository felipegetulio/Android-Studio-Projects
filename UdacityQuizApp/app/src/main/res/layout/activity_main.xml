<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/universe"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/quiz_title"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:hint="@string/name_hint"
            android:inputType="text"
            android:textColor="@android:color/holo_purple"
            android:textColorHint="@color/green" />

        <TextView
            style="@style/TitleQuestionTheme"
            android:text="@string/question_statement_1" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/option_a_question_1_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_a1" />

            <RadioButton
                android:id="@+id/option_b_question_1_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_b1" />

            <RadioButton
                android:id="@+id/option_c_question_1_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_c1" />

            <RadioButton
                android:id="@+id/option_d_question_1_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_d1" />

        </RadioGroup>

        <View style="@style/SeparatorStyle" />

        <TextView
            style="@style/TitleQuestionTheme"
            android:text="@string/question_statement_2" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/option_a_question_2_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_a2" />

            <RadioButton
                android:id="@+id/option_b_question_2_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_b2" />

            <RadioButton
                android:id="@+id/option_c_question_2_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_c2" />

            <RadioButton
                android:id="@+id/option_d_question_2_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_d2" />

        </RadioGroup>

        <View style="@style/SeparatorStyle" />

        <TextView
            style="@style/TitleQuestionTheme"
            android:text="@string/question_statement_3" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/option_a_question_3_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_a3" />

            <RadioButton
                android:id="@+id/option_b_question_3_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_b3" />

            <RadioButton
                android:id="@+id/option_c_question_3_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_c3" />

            <RadioButton
                android:id="@+id/option_d_question_3_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_d3" />

        </RadioGroup>

        <View style="@style/SeparatorStyle" />

        <TextView
            style="@style/TitleQuestionTheme"
            android:text="@string/question_statement_4" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
