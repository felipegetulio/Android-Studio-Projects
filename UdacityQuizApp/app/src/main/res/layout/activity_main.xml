            <RadioButton
                android:id="@+id/option_d_question_4_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_d4" />

        </RadioGroup>

        <View style="@style/SeparatorStyle" />

        <TextView
            style="@style/TitleQuestionTheme"
            android:text="@string/question_statement_5" />

        <EditText
            android:id="@+id/question_5_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:hint="@string/answer5_hint"
            android:inputType="numberDecimal"
            android:textColor="@android:color/holo_purple"
            android:textColorHint="@color/green" />

        <View style="@style/SeparatorStyle" />

        <TextView
            style="@style/TitleQuestionTheme"
            android:text="@string/question_statement_6" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
