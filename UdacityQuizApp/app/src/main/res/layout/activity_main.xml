            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingEnd="@dimen/checkbox_paddingEnd"
            android:paddingStart="@dimen/checkbox_paddingStart"
            android:text="@string/text_h10"
            android:textSize="16sp" />

        <View style="@style/SeparatorStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/finish_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:backgroundTint="@color/green"
                android:onClick="onClickFinishButton"
                android:text="@string/text_button_finish"
                android:textStyle="bold" />

            <Button
                android:id="@+id/show_answer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="20dp"
                android:backgroundTint="@color/green"
                android:enabled="false"
                android:onClick="showAnswers"
                android:text="@string/text_button_show_answers"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>