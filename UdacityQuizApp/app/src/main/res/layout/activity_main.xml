                style="@style/TextChoiceTheme"
                android:text="@string/text_a6" />

            <RadioButton
                android:id="@+id/option_b_question_6_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_b6" />

            <RadioButton
                android:id="@+id/option_c_question_6_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_c6" />

            <RadioButton
                android:id="@+id/option_d_question_6_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_d6" />

        </RadioGroup>

        <View style="@style/SeparatorStyle" />

        <TextView
            style="@style/TitleQuestionTheme"
            android:text="@string/question_statement_7" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_group7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/option_a_question_7_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_a7" />

            <RadioButton
                android:id="@+id/option_b_question_7_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_b7" />

            <RadioButton
                android:id="@+id/option_c_question_7_rb"
                style="@style/TextChoiceTheme"
                android:text="@string/text_c7" />

            <RadioButton
                android:id="@+id/option_d_question_7_rb"
