

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <!-- everything you already have -->

    <TextView
        android:id="@+id/hash_tag_cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#competitiveprogramming"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/hash_tag_teamname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hash_tag_cp"
        android:text="#thebuggadosteam"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/message"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alex_brush"

        android:text="miss you ^^!"
        android:textColor="@android:color/holo_red_light"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="@font/alex_brush" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/alex_brush"
        android:padding="20dp"
        android:text="To the most united team ever!"
        android:textColor="?attr/colorAccent"
        android:textSize="31sp"
        android:textStyle="bold"
        app:fontFamily="@font/alex_brush" />

</TableLayout>
</ScrollView>